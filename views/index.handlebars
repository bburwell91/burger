<h2>Eat-DA-Burger!</h2>

<div class="row burger-form">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="">
      <button type="submit" class="addBurgerButton">Cook the Burger!</button>
    </form>
  </div>
</div>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        <h4 class="burger-col">Cooked Burgers:</h4>
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class="burgerAvailable"> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        <h4 class="burger-col">Devoured Burgers:</h4>
        {{#each burgers}}
          {{#if this.devoured}}
            <div class="burgerEaten">
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>